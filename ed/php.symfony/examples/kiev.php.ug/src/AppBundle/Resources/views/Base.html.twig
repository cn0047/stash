<!DOCTYPE html>
<html>
  <head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}{{ 'kpug.brand.title'|trans }}{% endblock %}</title>
  {% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link href="{{ asset('bundles/app/css/main.css') }}" rel="stylesheet" type="text/css">
  {% endblock %}
  <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
  </head>
  <body>
  {% block body %}
    <nav class="navbar navbar-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">{{ 'kpug.label.toggle_navigation'|trans }}</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{ path('home') }}">
          <img src="{{ asset('bundles/app/images/kievphp.logo.png') }}">
        </a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><a href="{{ path('thanks') }}">{{ 'kpug.label.thanks'|trans }}</a></li>
          <li><a href="{{ path('contribute') }}">{{ 'kpug.label.contribute'|trans }}</a></li>
          {% if app.user %}
            <li>
              <a href="#">
                <span class="glyphicon glyphicon-user white" aria-hidden="true"></span>
              </a>
            </li>
          {% else %}
            <li><a href="/logIn">{{ 'kpug.label.log_in'|trans }}</a></li>
          {% endif %}
        </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      {% block content %}{% endblock %}
    </div>
    <footer class="footer">
      <div class="container">
        <div class="pull-left center-block">
          <p>{{ 'kpug.brand.title_2'|trans }}</p>
        </div>
        <div class="pull-right">
          <a href="{{ url_github }}"><img src="{{ asset('bundles/app/images/github.png') }}"></a>
          <a href="{{ url_twitter }}"><img src="{{ asset('bundles/app/images/twitter.png') }}"></a>
          <a href="{{ url_facebook }}"><img src="{{ asset('bundles/app/images/facebook.png') }}"></a>
          <a href="mailto:{{ mail }}"><img src="{{ asset('bundles/app/images/mail.png') }}"></a>
        </div>
      </div>
    </footer>
  {% endblock %}
  {% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="{{ asset('bundles/app/js/main.js') }}"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-65021885-1', 'auto');
      ga('send', 'pageview');
    </script>
  {% endblock %}
  </body>
</html>
